<resources>

	<!--
        Base application theme for API 14+. This theme completely replaces
        AppBaseTheme from BOTH res/values/styles.xml and
        res/values-v11/styles.xml on API 14+ devices.
	-->
	<style name="AppBaseTheme" parent="Theme.AppCompat.Light">
		<!-- API 14 theme customizations can go here. -->
	</style>
	
	 <style name="CustomActionBarTheme"
           parent="AppBaseTheme">
        <item name="android:actionBarTabBarStyle">@style/MyActionBar</item>
  		<item name="windowActionBar">true</item>
    </style>
	
    <!-- Tema para el color de las letras del login(verde) -->
    <style name="MyActionBar" parent="@android:style/Widget.Holo.ActionBar.TabBar">     
              <item name="android:background">#8EEB00</item>
         
    </style>
           
</resources>
